<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon_yamyams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icon_yamyams" />
            <RelativeLayout
                android:id="@+id/btn_goods_fragment_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:background="@drawable/round_rectangle_light_gray_8dp">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:text="아크릴 자캐 키링을 검색해보세요!"/>
                <ImageView
                    android:id="@+id/btn_search_act_searchreset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_searchreset"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/top"
        android:background="#a2a2a2"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_search_result_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        app:tabIndicatorColor="@color/darkgray"
        android:layout_marginHorizontal="16dp"
        app:tabIndicatorHeight="2dp">
    </android.support.design.widget.TabLayout>
    <View
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/tl_search_result_act"
        android:background="#a2a2a2"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_search_result_act_pager"
        android:layout_below="@id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>