<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon_yamyams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icon_yamyams" />
            <RelativeLayout
                android:id="@+id/btn_goods_fragment_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:background="@drawable/round_rectangle_light_gray_8dp">
                <EditText
                    android:id="@+id/et_search_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColorHint="#a2a2a2"
                    android:textColor="@color/darkgray"
                    android:textSize="15dp"
                    android:background="@drawable/round_rectangle_light_gray_8dp"
                    android:hint="아크릴 키링을 검색해보세요!"/>
                <ImageView
                    android:id="@+id/btn_search_act_searchreset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_searchreset"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/top"
        android:background="#a2a2a2"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 굿즈와 스토어를\n찾으시나요?"
            android:textSize="24dp"
            android:layout_marginTop="51dp"
            android:textColor="@color/colorReview"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="164dp"
        android:layout_marginHorizontal="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:text="추천 검색어"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/recommend"
        android:layout_marginTop="28dp">
        <RelativeLayout
            android:id="@+id/recommend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="스탬프" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_toRightOf="@id/recommend1"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="폰케이스" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_toRightOf="@id/recommend2"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="아크릴 키링" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend1"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="에폭시 스티커" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_toRightOf="@id/recommend4"
            android:layout_below="@id/recommend1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="등신대" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend1"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/recommend5"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="떡메모지" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend4"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="파우치" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend4"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/recommend7"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="홀로그램 슬로건" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend4"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/recommend8"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="뱃지" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recommend10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend8"
            android:layout_marginTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="스트랩 키링" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round_rect_search"
            android:layout_below="@id/recommend8"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/recommend10"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#333333"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="8dp"
                tools:text="그립톡" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>