<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon_yamyams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/icon_yamyams" />
            <RelativeLayout
                android:id="@+id/btn_goods_fragment_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="64dp"
                android:background="@drawable/round_rectangle_light_gray_8dp">
                <EditText
                    android:id="@+id/et_search_act"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:textColorHint="#a2a2a2"
                    android:textColor="@color/darkgray"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:imeActionLabel="검색"
                    android:fontFamily="@font/notosansmedium"
                    android:includeFontPadding="false"
                    android:background="@drawable/round_rectangle_light_gray_8dp"
                    android:hint="아크릴 키링을 검색해보세요!"/>
                <RelativeLayout
                        android:id="@+id/btn_search_act_searchreset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_searchreset"

                            android:layout_margin="5dp"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/top"
        android:background="#a2a2a2"/>
    <FrameLayout
            android:id="@+id/fl_search_act_pager"
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>