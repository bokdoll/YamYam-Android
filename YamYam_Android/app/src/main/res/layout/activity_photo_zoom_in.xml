<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".review.PhotoZoomInActivity"
    android:background="#CC000000">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_photo_zoom_in_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <ImageButton
        android:id="@+id/btn_photo_zoom_in_act_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/icon_x_white"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_photo_zoom_in_act"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:tabBackground="@drawable/photo_selector"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="center"
        app:tabIndicator="@null"
        app:tabPaddingStart="10dp"
        app:tabPaddingEnd="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"
        android:layout_centerHorizontal="true">

    </android.support.design.widget.TabLayout>
</RelativeLayout>