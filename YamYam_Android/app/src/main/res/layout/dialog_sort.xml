<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SortDialog"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/border_dialog">
    <ImageView
        android:id="@+id/btn_dialog_sort_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/path_close"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_dialog_sort_close"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_dialog_sort_popular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_sort_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인기순"
                android:fontFamily="@font/notosansmedium"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/MainYellow"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/iv_dialog_sort_popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_checkkky"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#a2a2a2"/>
        <RelativeLayout
            android:id="@+id/rl_dialog_sort_price_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_sort_price_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고가순"
                android:fontFamily="@font/notosansmedium"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/darkgray"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/iv_dialog_sort_price_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_checkkk"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#a2a2a2"/>
        <RelativeLayout
            android:id="@+id/rl_dialog_sort_price_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_sort_price_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저가순"
                android:fontFamily="@font/notosansmedium"
                android:includeFontPadding="false"
                android:textSize="15dp"
                android:textColor="@color/darkgray"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/iv_dialog_sort_price_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_checkkk"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="20dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_dialog_sort_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dialog_button_save"
            android:layout_marginBottom="17dp"
            android:layout_marginHorizontal="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:fontFamily="@font/notosansbold"
                android:includeFontPadding="false"
                android:textSize="16dp"
                android:layout_marginVertical="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>