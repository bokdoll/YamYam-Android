<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="5dp">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/topInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="1:1">
            <ImageView
                android:id="@+id/iv_rv_item_goods_exhibition_detail_thumnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
    <ImageView
        android:id="@+id/iv_rv_item_goods_exhibition_detail_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="11dp"
        android:src="@drawable/icon_lineheart" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topInfo"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_detail_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/brownish_gray"
            android:textSize="12dp"
            tools:text="레드프린팅,프레스" />

        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:text="자유형 칼선 스티커" />

        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/darkgray"
            android:textSize="15dp"
            tools:text="32,900" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@+id/tv_rv_item_goods_exhibition_detail_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#4d4d4d"
                android:textSize="12dp"
                tools:text="4.8" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="최소수량 "
                android:textColor="#9d9d9d"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_rv_item_goods_exhibition_detail_minQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#9d9d9d"
                android:textSize="12dp"
                tools:text="10" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="리뷰 "
                android:textColor="#9d9d9d"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_rv_item_goods_exhibition_detail_reviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#9d9d9d"
                android:textSize="12dp"
                tools:text="300" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>