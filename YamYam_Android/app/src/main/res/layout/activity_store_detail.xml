<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".storedetail.StoreDetailActivity">
    <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">
        <ImageView
                android:id="@+id/btn_store_detail_act_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="23dp"
                app:srcCompat="@drawable/selector_bookmark_flag" />

        <ImageView
                android:id="@+id/btn_store_detail_act_web_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/btn_store_detail_act_bookmark"
                android:layout_marginTop="23dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/icon_link" />

        <ImageView
                android:id="@+id/iv_store_detail_act_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="23dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/img_store_profile" />

        <TextView
                android:id="@+id/tv_store_detail_act_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                tools:text="가게이름"
                android:textColor="@color/darkgray"
                android:textSize="16dp"
                android:fontFamily="@font/notosansbold"
                android:includeFontPadding="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv_store_detail_act_image"/>

        <LinearLayout
                android:id="@+id/ll_store_detail_act_hashtag_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_below="@id/tv_store_detail_act_store_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_hashtag"
                    android:layout_margin="3dp"
                    android:visibility="visible">
                <TextView
                        android:id="@+id/tv_act_store_detail_hashtag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        tools:text="#해시태그1"
                        android:fontFamily="@font/notosansregular"
                        android:includeFontPadding="false"
                        android:textColor="@color/darkgray"
                        android:textSize="11dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/rl_act_store_detail_hashtag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_hashtag"
                    android:layout_margin="3dp"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp">
                <TextView
                        android:id="@+id/tv_act_store_detail_hashtag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="5dp"
                        tools:text="#해시태그2"
                        android:fontFamily="@font/notosansregular"
                        android:includeFontPadding="false"
                        android:textColor="@color/darkgray"
                        android:textSize="11dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
            android:id="@+id/fl_act_store_detail"
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </FrameLayout>
</RelativeLayout>