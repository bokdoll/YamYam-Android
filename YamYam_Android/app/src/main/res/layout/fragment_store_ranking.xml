<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/spinner_rv_item_store_ranking_frag"
                    android:background="@drawable/background_hashtag"
                    android:layout_marginStart="16dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/darkgray"
                    android:letterSpacing="-0.04"
                    android:lineSpacingExtra="10sp"
                    android:fontFamily="@font/notosansdemilight"
                    android:includeFontPadding="false"
                    android:textSize="13dp"
            />
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_item_store_ranking_frag_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    android:paddingTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_rv_item_store_ranking_frag"
                    android:layout_marginTop="2dp"
                    android:nestedScrollingEnabled="false"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>