<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" android:background="@android:color/white">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_best_tab_best_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:id="@+id/tv_best_tab_best_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베스트 굿즈"
                android:textColor="@color/selector_text_color_black_gray"
                android:textSize="15dp"
                android:fontFamily="@font/notosansbold"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/btn_best_tab_best_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <TextView
                android:id="@+id/tv_best_tab_best_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베스트 리뷰"
                android:fontFamily="@font/notosansbold"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:letterSpacing="-0.04"
                android:lineSpacingExtra="11sp"
                android:textColor="@color/selector_text_color_black_gray"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>