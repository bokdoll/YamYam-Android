<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <ImageView
                android:id="@+id/iv_rv_item_goods_exhibition_thumnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
            <TextView
                android:id="@+id/tv_rv_item_goods_exhibition_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획전 제목"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="7dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_rv_item_goods_exhibition_example1_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/image_radius"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    </android.support.constraint.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example1_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/brownish_gray"
                        android:text="업체1"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="19sp"
                        android:textColor="@color/brownish_gray"
                        android:text="제품1"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example1_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/darkgray"
                        android:text="가격1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="9dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star"/>
                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example1_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="최소수량 "
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example1_minQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical"
                            android:text="10"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_rv_item_goods_exhibition_example2_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    </android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example2_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/brownish_gray"
                        android:text="업체2"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="19sp"
                        android:textColor="@color/brownish_gray"
                        android:text="제품2"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example2_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/darkgray"
                        android:text="가격2"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="9dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star"/>
                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example2_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="최소수량 "
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example2_minQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical"
                            android:text="2"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_rv_item_goods_exhibition_example3_image"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />
                    </android.support.constraint.ConstraintLayout>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example3_store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/brownish_gray"
                        android:text="업체3"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="19sp"
                        android:textColor="@color/brownish_gray"
                        android:text="제품3"/>
                    <TextView
                        android:id="@+id/tv_rv_item_goods_exhibition_example3_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/darkgray"
                        android:text="가격3"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="9dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star"/>
                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example3_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="최소수량 "
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/tv_rv_item_goods_exhibition_example3_minQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical"
                            android:text="3"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btn_rv_item_goods_exhibition_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/exhibition_all_button"
            android:layout_gravity="center_horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:id="@+id/tv_rv_item_goods_exhibition_countSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/colorWhite"
                    android:text="0"/>
                <TextView
                    android:layout_toRightOf="@id/tv_rv_item_goods_exhibition_countSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/colorWhite"
                    android:text="개의 상품 모두 보기"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>