<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_rv_item_goods_exhibition"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginVertical="7dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/iv_rv_item_goods_exhibition_thumnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "유니크한 나만의 키링✨"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="14dp" />
        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "소량제작 기획전💖"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-1dp"
            android:layout_below="@id/tv_rv_item_goods_exhibition_title1"/>
        <TextView
            android:id="@+id/tv_rv_item_goods_exhibition_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "3"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="-1dp"
            android:layout_below="@id/tv_rv_item_goods_exhibition_title2"/>
    </RelativeLayout>
</RelativeLayout>