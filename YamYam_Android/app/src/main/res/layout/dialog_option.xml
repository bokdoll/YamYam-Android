<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".home.goods.OptionDialog"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/border_dialog">
    <ImageView
            android:id="@+id/btn_dialog_option_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/path_close"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
            android:id="@+id/ll_dialog_option_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp">
        <TextView
                android:id="@+id/btn_dialog_option_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 범위"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="@color/darkgray">
        </TextView>
        <TextView
                android:id="@+id/btn_dialog_option_minAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최소 수량"
                android:layout_margin="5dp"
                android:textSize="15dp">
        </TextView>
        <TextView
                android:id="@+id/btn_dialog_option_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류"
                android:layout_margin="5dp"
                android:textSize="15dp">
        </TextView>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/rl_dialog_option_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_dialog_option_close"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="invisible">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true">
            <TextView
                    android:id="@+id/tv_dialog_option_price_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10,000"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:layout_marginHorizontal="10dp"/>
            <TextView
                    android:id="@+id/tv_dialog_option_price_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10,000"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="18dp"/>
        </LinearLayout>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/range_seekbar"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                app:bar_highlight_color="@color/MainYellow"
                app:corner_radius="10"
                app:min_value="0"
                app:max_value="1000"
                app:bar_color="#bcbcbc"
                app:data_type="_integer"
                app:steps="100"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_dialog_option_min_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_dialog_option_top"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="invisible">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <EditText
                    android:id="@+id/et_dialog_option_minAmount"
                    android:layout_width="126dp"
                    android:layout_height="35dp"
                    android:hint="입력해주세요"
                    android:textColorHint="#a2a2a2"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/darkgray"
                    android:background="@drawable/border_round_rect_gray_white">
            </EditText>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:text="개"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/et_dialog_option_minAmount"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
            android:id="@+id/rl_dialog_option_variety"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_dialog_option_top"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="visible">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_dialog_option_variety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </ScrollView>
    <RelativeLayout
            android:id="@+id/btn_dialog_option_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dialog_button_save"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="17dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="16dp"
                android:layout_marginVertical="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</RelativeLayout>