<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:context=".home.goods.OptionDialog"
        android:background="@drawable/border_dialog">
    <ImageView
            android:id="@+id/btn_dialog_option_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/path_close"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="20dp"/>
    <LinearLayout
            android:id="@+id/ll_dialog_option_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="15dp">
        <TextView
                android:id="@+id/btn_dialog_option_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 범위"
                android:layout_margin="5dp"
                android:textSize="15dp"
                android:textColor="@color/darkgray">
        </TextView>
        <TextView
                android:id="@+id/btn_dialog_option_minAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최소 수량"
                android:layout_margin="5dp"
                android:textSize="15dp">
        </TextView>
        <TextView
                android:id="@+id/btn_dialog_option_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류"
                android:layout_margin="5dp"
                android:textSize="15dp">
        </TextView>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/rl_dialog_option_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_dialog_option_close"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="invisible">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true">
            <TextView
                    android:id="@+id/tv_dialog_option_price_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10,000"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:layout_marginHorizontal="10dp"/>
            <TextView
                    android:id="@+id/tv_dialog_option_price_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10,000"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="18dp"/>
        </LinearLayout>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/range_seekbar"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                app:bar_highlight_color="@color/MainYellow"
                app:right_thumb_image="@drawable/icon_range_unselected"
                app:left_thumb_image="@drawable/icon_range_unselected"
                app:right_thumb_image_pressed="@drawable/icon_range_selected"
                app:left_thumb_image_pressed="@drawable/icon_range_selected"
                app:corner_radius="10"
                app:bar_color="#bcbcbc"
                app:data_type="_integer"
                app:steps="500"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_dialog_option_min_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_dialog_option_top"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="invisible">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
            <EditText
                    android:id="@+id/et_dialog_option_minAmount"
                    android:layout_width="126dp"
                    android:layout_height="35dp"
                    android:hint="입력해주세요"
                    android:textColorHint="#a2a2a2"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:textColor="@color/darkgray"
                    android:background="@drawable/border_round_rect_gray_white">
            </EditText>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:text="개"
                    android:textSize="20dp"
                    android:layout_toRightOf="@id/et_dialog_option_minAmount"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_dialog_option_variety"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_dialog_option_top"
            android:layout_above="@id/btn_dialog_option_confirm"
            android:visibility="visible"
            android:paddingHorizontal="16dp">
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp" android:layout_marginTop="7dp"
                    android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_toRightOf="@id/btn_dialog_option_variety1"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_toRightOf="@id/btn_dialog_option_variety2"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety1"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety1"
                android:layout_toRightOf="@id/btn_dialog_option_variety4"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety1"
                android:layout_toRightOf="@id/btn_dialog_option_variety5"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety4"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety4"
                android:layout_toRightOf="@id/btn_dialog_option_variety7"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety4"
                android:layout_toRightOf="@id/btn_dialog_option_variety8"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety7"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_dialog_option_variety11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_dialog_option_variety"
                android:layout_below="@id/btn_dialog_option_variety7"
                android:layout_toRightOf="@id/btn_dialog_option_variety10"
                android:layout_margin="4dp"
                android:visibility="invisible">
            <TextView
                    android:id="@+id/tv_dialog_option_variety11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="정음스티커"
                    android:textColor="@color/darkgray"
                    android:textSize="14dp"
                    android:layout_marginHorizontal="11dp"
                    android:layout_marginVertical="7dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/btn_dialog_option_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_dialog_button_save"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="17dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="16dp"
                android:layout_marginVertical="12dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</RelativeLayout>