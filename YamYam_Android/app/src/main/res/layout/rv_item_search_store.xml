<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
    <ImageView
            android:id="@+id/iv_rv_item_store_search_image"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/img_store1"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:layout_toRightOf="@id/iv_rv_item_store_search_image"
            android:layout_centerVertical="true">

        <TextView
                android:id="@+id/tv_rv_item_store_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="가게 이름"
                android:textColor="#4D4D4D"
                android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_rv_item_store_search_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="#해시태그"
            android:layout_below="@id/tv_rv_item_store_search_name"
            android:textSize="14dp">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/btn_rv_item_store_search_like"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

        <ImageView
                android:id="@+id/iv_rv_item_store_search_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bookmark_flag"/>
    </RelativeLayout>
</RelativeLayout>